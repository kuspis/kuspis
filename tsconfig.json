{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "ESNext",                                
    "moduleResolution": "node",                     
    "types": ["node"],                                      
    "outDir": "lib/",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
}
